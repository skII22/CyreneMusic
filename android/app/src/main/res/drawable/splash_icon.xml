<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Splash Screen 专用图标容器
    Android 12+ 会将图标裁剪成圆形（直径约为图标的 2/3）
    使用 inset 给图标添加内边距，确保不被裁剪
-->
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:drawable="@drawable/splash_icon_src"
    android:insetTop="52dp"
    android:insetBottom="52dp"
    android:insetLeft="52dp"
    android:insetRight="52dp" />
